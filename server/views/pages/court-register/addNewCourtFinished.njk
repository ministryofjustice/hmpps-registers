{% extends "../../partials/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - Add Court" %}

{% macro message(id, name) %}
  The court {{ id }} - {{ name }} has been saved successfully
{% endmacro %}

{% block content %}

<div class="govuk-width-container">
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}

  <main class="app-container govuk-body">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Add a new court - finished</h1>
      </div>
      <div class="govuk-grid-column-full">
        {{ govukPanel({
          titleText: "Court saved",
          text: message(id, name),
          attributes: { "data-qa": "message" }
        }) }}
      </div>
    </div>
  </main>
</div>
{% endblock %}
